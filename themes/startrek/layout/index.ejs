<!-- Latest Posts Section -->
<section class="posts-section">
    <div class="posts-container">
        <div class="posts-header">
            <h2 class="section-title">Latest Posts</h2>
            <a href="<%- url_for('/archives') %>" class="view-all-link">
                <span>View All</span>
                <svg class="icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="7" y1="17" x2="17" y2="7"></line>
                    <polyline points="7,7 17,7 17,17"></polyline>
                </svg>
            </a>
        </div>
        
        <div class="posts-grid">
            <% site.posts.sort('date', -1).limit(6).each(function(post) { %>
                <article class="post-card">
                    <% if (post.image) { %>
                        <img src="<%= post.image %>" alt="<%= post.title %>" class="post-image">
                    <% } else { %>
                        <div class="post-image" style="background: linear-gradient(135deg, var(--color-blue), var(--color-purple)); display: flex; align-items: center; justify-content: center; color: white; font-size: 2rem;">
                            üìù
                        </div>
                    <% } %>
                    
                    <div class="post-content">
                        <div class="post-meta">
                            <time class="post-date" datetime="<%= date(post.date, 'YYYY-MM-DD') %>">
                                <%= date(post.date, 'MMM DD, YYYY') %>
                            </time>
                            <% if (post.categories && post.categories.length) { %>
                                <span class="post-category">
                                    <%= post.categories.data[0].name %>
                                </span>
                            <% } %>
                        </div>
                        
                        <h3 class="post-title">
                            <a href="<%- url_for(post.path) %>" class="post-link">
                                <%= post.title %>
                            </a>
                        </h3>
                        
                        <p class="post-excerpt">
                            <%= truncate(strip_html(post.excerpt || post.content), 120) %>
                        </p>
                        
                        <div class="post-footer">
                            <a href="<%- url_for(post.path) %>" class="read-more">
                                <span>Continue Reading</span>
                                <svg class="icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <line x1="7" y1="17" x2="17" y2="7"></line>
                                    <polyline points="7,7 17,7 17,17"></polyline>
                                </svg>
                            </a>
                            
                            <% if (post.tags && post.tags.length) { %>
                                <div class="post-tags">
                                    <% post.tags.limit(3).each(function(tag) { %>
                                        <a href="<%- url_for(tag.path) %>" class="tag">
                                            #<%= tag.name %>
                                        </a>
                                    <% }) %>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </article>
            <% }) %>
        </div>
    </div>
</section>

<!-- Newsletter/CTA Section -->
<section class="cta-section" style="padding: var(--space-24) 0; background: var(--background-secondary);">
    <div class="container">
        <div class="cta-content" style="text-align: center; max-width: 600px; margin: 0 auto;">
            <h2 class="text-large-title" style="margin-bottom: var(--space-4);">
                Stay Updated
            </h2>
            <p class="text-title-3 text-secondary" style="margin-bottom: var(--space-8); line-height: 1.5;">
                Get notified about new apps, updates, and exclusive content delivered to your inbox.
            </p>
            
            <div class="newsletter-form" style="display: flex; gap: var(--space-3); max-width: 400px; margin: 0 auto;">
                <input 
                    type="email" 
                    placeholder="Enter your email" 
                    class="form-input" 
                    style="flex: 1;"
                    aria-label="Email address"
                >
                <button class="btn btn-primary btn-md">
                    Subscribe
                </button>
            </div>
            
            <p class="text-footnote text-tertiary" style="margin-top: var(--space-4);">
                No spam, unsubscribe at any time.
            </p>
        </div>
    </div>
</section>

<script>
// Add scroll-triggered animations
document.addEventListener('DOMContentLoaded', function() {
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -10% 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('animate-fade-in-up');
            }
        });
    }, observerOptions);
    
    // Observe feature cards and post cards
    document.querySelectorAll('.feature-card, .post-card').forEach(card => {
        observer.observe(card);
    });
    
    // Add stagger effect to feature cards
    const featureCards = document.querySelectorAll('.feature-card');
    featureCards.forEach((card, index) => {
        card.style.animationDelay = `${index * 0.1}s`;
    });
    
    // Add stagger effect to post cards
    const postCards = document.querySelectorAll('.post-card');
    postCards.forEach((card, index) => {
        card.style.animationDelay = `${index * 0.1}s`;
    });
    
    // Newsletter form handling
    const newsletterForm = document.querySelector('.newsletter-form');
    if (newsletterForm) {
        const emailInput = newsletterForm.querySelector('input[type="email"]');
        const subscribeBtn = newsletterForm.querySelector('button');
        
        subscribeBtn.addEventListener('click', function(e) {
            e.preventDefault();
            
            if (emailInput.value && emailInput.validity.valid) {
                // Add success state
                subscribeBtn.textContent = 'Subscribed!';
                subscribeBtn.disabled = true;
                emailInput.value = '';
                
                // Reset after 3 seconds
                setTimeout(() => {
                    subscribeBtn.textContent = 'Subscribe';
                    subscribeBtn.disabled = false;
                }, 3000);
            } else {
                // Add error state
                emailInput.focus();
                emailInput.style.borderColor = 'var(--color-red)';
                
                setTimeout(() => {
                    emailInput.style.borderColor = '';
                }, 2000);
            }
        });
    }
});
</script>