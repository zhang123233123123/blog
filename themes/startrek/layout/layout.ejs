<!DOCTYPE html>
<html lang="<%= config.language %>" class="no-js">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#007AFF">
    <meta name="color-scheme" content="light dark">
    
    <title><% if (page.title){ %><%= page.title %> | <% } %><%= config.title %></title>
    <meta name="description" content="<% if (page.description) { %><%= page.description %><% } else { %><%= config.description %><% } %>">
    
    <!-- Preload Critical Resources -->
    <link rel="preload" href="<%- url_for('css/design-system.css') %>" as="style">
    <link rel="preload" href="<%- url_for('css/components.css') %>" as="style">
    <link rel="preload" href="<%- url_for('css/style.css') %>" as="style">
    
    <!-- System Fonts (No external fonts needed for Apple style) -->
    <style>
        /* Critical CSS for initial render */
        html { font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', system-ui, sans-serif; }
        body { margin: 0; background: #FFFFFF; }
        .loading { opacity: 0; }
        @media (prefers-color-scheme: dark) {
            body { background: #000000; color: #FFFFFF; }
        }
    </style>
    
    <!-- Stylesheets -->
    <%- css('css/style') %>
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>üöÄ</text></svg>">
    
    <!-- Safari specific -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta name="apple-mobile-web-app-title" content="<%= config.title %>">
    
    <!-- Open Graph -->
    <meta property="og:type" content="website">
    <meta property="og:title" content="<% if (page.title){ %><%= page.title %> | <% } %><%= config.title %>">
    <meta property="og:description" content="<% if (page.description) { %><%= page.description %><% } else { %><%= config.description %><% } %>">
    <meta property="og:url" content="<%= config.url %>">
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<% if (page.title){ %><%= page.title %> | <% } %><%= config.title %>">
    <meta name="twitter:description" content="<% if (page.description) { %><%= page.description %><% } else { %><%= config.description %><% } %>">
</head>
<body class="loading">
    <div class="main-layout">
        <!-- Header -->
        <header class="site-header" id="header">
            <div class="header-container">
                <!-- Logo/Brand -->
                <a href="<%- url_for('/') %>" class="site-logo">
                    <div class="logo-icon">üöÄ</div>
                    <div class="logo-text">
                        <div class="site-title"><%= config.title %></div>
                        <div class="site-subtitle"><%= config.subtitle %></div>
                    </div>
                </a>
                
                <!-- Main Navigation -->
                <nav class="main-nav hidden-mobile">
                    <ul class="nav-list">
                        <% for (let name in theme.menu) { %>
                            <li class="nav-item">
                                <a href="<%- url_for(theme.menu[name]) %>" class="nav-link">
                                    <%= name %>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
                
                <!-- Header Actions -->
                <div class="header-actions">
                    <!-- Language Switcher -->
                    <div class="language-switcher">
                        <button class="language-btn" id="language-toggle">
                            <span class="language-text">EN</span>
                            <svg class="icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="6,9 12,15 18,9"></polyline>
                            </svg>
                        </button>
                    </div>
                    
                    <!-- Theme Toggle -->
                    <button class="btn btn-icon-only btn-ghost" id="theme-toggle" aria-label="Toggle theme">
                        <svg class="icon theme-icon-light" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="5"></circle>
                            <line x1="12" y1="1" x2="12" y2="3"></line>
                            <line x1="12" y1="21" x2="12" y2="23"></line>
                            <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
                            <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
                            <line x1="1" y1="12" x2="3" y2="12"></line>
                            <line x1="21" y1="12" x2="23" y2="12"></line>
                            <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
                            <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
                        </svg>
                        <svg class="icon theme-icon-dark" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
                        </svg>
                    </button>
                    
                    <!-- Mobile Menu Toggle -->
                    <button class="navbar-toggle hidden-desktop" id="mobile-menu-toggle" aria-label="Toggle menu">
                        <svg class="icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="3" y1="6" x2="21" y2="6"></line>
                            <line x1="3" y1="12" x2="21" y2="12"></line>
                            <line x1="3" y1="18" x2="21" y2="18"></line>
                        </svg>
                    </button>
                </div>
            </div>
            
            <!-- Mobile Navigation Menu -->
            <div class="mobile-nav hidden" id="mobile-nav">
                <div class="mobile-nav-content">
                    <ul class="mobile-nav-list">
                        <% for (let name in theme.menu) { %>
                            <li class="mobile-nav-item">
                                <a href="<%- url_for(theme.menu[name]) %>" class="mobile-nav-link">
                                    <%= name %>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </header>

        <!-- Main Content Wrapper -->
        <div class="content-wrapper">
            <main class="main-content">
                <%- body %>
            </main>
        </div>

        <!-- Footer -->
        <footer class="site-footer">
            <div class="footer-container">
                <div class="footer-content">
                    <!-- About Section -->
                    <div class="footer-section">
                        <h3 class="footer-title"><%= config.title %></h3>
                        <p class="footer-text"><%= config.description %></p>
                        <div class="social-links">
                            <% for (let name in theme.social) { %>
                                <a href="<%= theme.social[name] %>" class="social-link" target="_blank" rel="noopener" aria-label="<%= name %>">
